{
  "name": "auto-ensure",
  "displayName": "FiveM Auto Ensure",
  "description": "Automatically ensures resources you're working on when saving a file. ",
  "publisher": "sw4m",
  "repository": "https://github.com/sw4m/auto-ensure",
  "version": "1.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
            "when": "config.auto-ensure.mode == 'selectedEnsure' && resourceUri.scheme == 'file' && resourceUri.fsPath =~ /\\\\|\\//",
          "command": "auto-ensure.selectFolder",
          "title": "[FiveM Auto Ensure] Select Folder",
          "group": "5_auto-ensure"
        }
      ]
    },
    "configuration": {
      "title": "[FiveM Auto Ensure] Settings",
      "type": "object",
      "properties": {
        "auto-ensure.connectionList": {
          "type": "array",
          "default": [],
          "description": "Connection List"
        },
        "auto-ensure.mode": {
          "type": "string",
          "enum": [
            "workspaceEnsure",
            "selectedEnsure",
            "recursiveEnsure"
          ],
          "enumItemLabels": [
            "Ensure the resource that is open",
            "Ensure only the selected folders",
            "Ensure all resources in the workspace"
          ],
          "default": "workspaceEnsure",
          "description": "Select the mode of ensuring resources"
        },
        "auto-ensure.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically send 'refresh' when saving a file"
        }
      }
    },
    "commands": [
      {
        "command": "auto-ensure.openList",
        "title": "[FiveM Auto Ensure] Connect"
      },
      {
        "command": "auto-ensure.disconnect",
        "title": "[FiveM Auto Ensure] Disconnect"
      },
      {
        "command": "auto-ensure.openConfig",
        "title": "[FiveM Auto Ensure] Open Config File"
      },
            {
        "command": "auto-ensure.refresh",
        "title": "[FiveM Auto Ensure] Send 'refresh'"
      },
      {
        "command": "auto-ensure.selectFolder",
        "title": "[FiveM Auto Ensure] Select Folder",
        "when": "false"
      }
    ]
  },
  "scripts": {},
  "type": "commonjs",
  "dependencies": {
    "rcon": "^1.1.0"
  }
}
